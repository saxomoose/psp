{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",                             
    "sourceMap": true,  
    "outDir": "./build/",                       
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                
    "skipLibCheck": true                                 /* Skip type checking all .d.ts files. */
  }
}